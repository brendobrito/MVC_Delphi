unit Menus.Model.Conexoes.Factory.QueryFiredac;

interface

uses Menus.Model.Conexoes.Interfaces, Menus.Controller.Conexoes.Factory.Conexao,
  Menus.Model.Conexoes.QueryFireDac;


Type
  TModelQueryFiredacFireDac = class(TInterfacedObject, iModelQueryFiredacFactory)
    private
    Conexao : iModelConexao;
    public
      constructor Create;
      destructor Destroy; override;
      class function New : iModelFactoryDataSet;
      function DataSetFiredac(Conexao : iModelConexao) : iModelDataSet;
  end;

implementation

{ TModelConexaoFactoryDataSet }

constructor TModelQueryFiredacFireDac.Create;
begin
  Conexao := TControllerConexoesFactoryConexao.New.Conexao;
  TFiredacModelQuery.New(Conexao);

end;

destructor TModelQueryFiredacFireDac.Destroy;
begin

  inherited;
end;

class function TModelQueryFiredacFireDac.New: iModelConexao;
begin

  Result := Self.Create;

end;

end.
