unit Ind.Controller.Forms;

interface

uses
  FMX.Types;

type
  TControllerForms = class
    class procedure CreateForm(ClassName : String; aParent : TFMXObject = nil);
  end;

implementation

uses
  System.Classes, FMX.Forms, System.SysUtils;

{ TControllerForms }

class procedure TControllerForms.CreateForm(ClassName: String; aParent : TFMXObject = nil);
var
  ObjFMX : TFMXObjectClass;
  newForm : TCustomForm;
begin
  objFMX := TFMXObjectClass(GetClass(ClassName));
  try
    newForm := (objFMX.Create(nil) as TCustomForm);
    newForm.Position := TFormPosition.ScreenCenter;

    if aParent <> nil then begin
       newForm.Parent := aParent;
       newForm.Show;
       exit;
    end;

    try
      if aParent = nil then
      newForm.ShowModal;

    finally
      if Assigned(newForm) then
      newForm.Free;
    end;
  except
    raise Exception.Create('Objeto não existe '+ClassName);
  end;
end;
end.
